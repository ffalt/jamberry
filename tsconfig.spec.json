{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist/spec",
		"emitDecoratorMetadata": true,
		"moduleResolution": "bundler",
		"types": [
      "jest",
      "hammerjs",
      "node",
      "@angular/localize"
    ],
		"module": "commonjs"
	},
	"files": [
		"src/polyfills.ts"
	],
	"include": [
		"**/*.spec.ts",
		"**/*.d.ts"
	],
	"exclude": [
		"local",
		"electron",
		"test-config.helper.ts"
	]
}
