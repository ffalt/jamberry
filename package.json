{
  "name": "jamberry",
  "version": "0.4.27",
  "author": "ffalt",
  "license": "MIT",
  "description": "a html5 jamserve web player",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:prod": "ng serve --aot --configuration production",
    "build": "ng build",
    "build:AOT": "ng build --aot",
    "check": "qlty check --all",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "ng lint && eslint .",
    "lint:fix": "ng lint --fix",
    "clean": "rimraf dist",
    "i18n:export": "ng extract-i18n --output-path src/locale",
    "release": "commit-and-tag-version -a",
    "update:angular": "ng update @angular/cli @angular/core",
    "build:changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 1",
    "build:releaselog": "conventional-changelog -p angular -r 2 -o RELEASELOG.md",
    "build:prebuild": "npm run clean && npm run build:version",
    "build:version": "node ./build-pre.js",
    "bundle-report": "npm run build:stats && webpack-bundle-analyzer --mode static dist/stats.json",
    "build:stats": "ng build --named-chunks --configuration production --stats-json --output-hashing=none",
    "build:prod": "ng build --verbose --aot --configuration production --base-href \"/\"",
    "build:develop": "npm run build:prebuild && ng build --progress --base-href \"/\"",
    "build:deploy": "npm run build:prebuild && npm run build:prod",
    "test:watch": "jest --watch"
  },
  "engines": {
    "node": ">=20"
  },
  "private": true,
  "standard-version": {
    "scripts": {
      "postbump": "node ./build-pre.js && git add ./src/environments/version.ts"
    }
  },
  "dependencies": {
    "@angular/animations": "20.0.6",
    "@angular/cdk": "20.0.5",
    "@angular/common": "20.0.6",
    "@angular/compiler": "20.0.6",
    "@angular/core": "20.0.6",
    "@angular/forms": "20.0.6",
    "@angular/platform-browser": "20.0.6",
    "@angular/platform-browser-dynamic": "20.0.6",
    "@angular/router": "20.0.6",
    "core-js": "3.43.0",
    "mousetrap": "1.6.5",
    "ngx-image-cropper": "9.1.5",
    "rxjs": "7.8.2",
    "soundmanager2": "2.97.20170602",
    "tslib": "2.8.1",
    "zone.js": "0.15.1"
  },
  "devDependencies": {
    "@angular/build": "20.0.5",
    "@angular/cli": "20.0.5",
    "@angular/compiler-cli": "20.0.6",
    "@angular/language-service": "20.0.6",
    "@angular/localize": "20.0.6",
    "@eslint/js": "^9.31.0",
    "@types/jest": "29.5.14",
    "@types/mousetrap": "1.6.15",
    "@types/node": "24.0.10",
    "commit-and-tag-version": "12.5.1",
    "conventional-changelog-cli": "5.0.0",
		"angular-eslint": "^20.1.1",
    "eslint": "9.30.1",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-no-null": "1.0.2",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-rxjs-x": "0.7.6",
    "eslint-plugin-unicorn": "59.0.1",
    "globals": "^16.3.0",
    "jest": "29.7.0",
    "jest-preset-angular": "14.6.0",
    "ng-mocks": "14.13.5",
    "postcss": "8.5.6",
    "rimraf": "6.0.1",
    "ts-jest": "29.4.0",
    "ts-node": "10.9.2",
    "typescript": "5.8.3",
    "typescript-eslint": "^8.36.0",
    "webpack-bundle-analyzer": "4.10.2"
  }
}
