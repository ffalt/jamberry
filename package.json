{
  "name": "jamberry",
  "version": "0.4.22",
  "author": "ffalt",
  "license": "MIT",
  "description": "a html5 jamserve web player",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:prod": "ng serve --aot --configuration production",
    "build": "ng build",
    "build:AOT": "ng build --aot",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "clean": "rimraf dist",
    "i18n:export": "ng extract-i18n --output-path src/locale",
    "release": "commit-and-tag-version -a",
    "update:angular": "ng update @angular/cli @angular/core",
    "build:changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 1",
    "build:releaselog": "conventional-changelog -p angular -r 2 -o RELEASELOG.md",
    "build:prebuild": "npm run clean && npm run build:version",
    "build:version": "node ./build-pre.js",
    "bundle-report": "npm run build:stats && webpack-bundle-analyzer --mode static dist/stats.json",
    "build:stats": "ng build --named-chunks --configuration production --stats-json --output-hashing=none",
    "build:prod": "ng build --verbose --aot --configuration production --base-href \"/\"",
    "build:develop": "npm run build:prebuild && ng build --progress --base-href \"/\"",
    "build:deploy": "npm run build:prebuild && npm run build:prod",
    "test:watch": "jest --watch"
  },
  "engines": {
    "node": ">=16"
  },
  "private": true,
  "standard-version": {
    "scripts": {
      "postbump": "node ./build-pre.js && git add ./src/environments/version.ts"
    }
  },
  "dependencies": {
    "@angular/animations": "17.3.1",
    "@angular/cdk": "17.3.1",
    "@angular/common": "17.3.1",
    "@angular/compiler": "17.3.1",
    "@angular/core": "17.3.1",
    "@angular/forms": "17.3.1",
    "@angular/platform-browser": "17.3.1",
    "@angular/platform-browser-dynamic": "17.3.1",
    "@angular/platform-server": "17.3.1",
    "@angular/router": "17.3.1",
    "core-js": "3.36.1",
    "hammerjs": "2.0.8",
    "mousetrap": "1.6.5",
    "ngx-image-cropper": "7.2.1",
    "rxjs": "7.6.0",
    "soundmanager2": "2.97.20170602",
    "tslib": "2.6.2",
    "zone.js": "0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "17.3.1",
    "@angular-eslint/builder": "17.3.0",
    "@angular-eslint/eslint-plugin": "17.3.0",
    "@angular-eslint/eslint-plugin-template": "17.3.0",
    "@angular-eslint/schematics": "17.3.0",
    "@angular-eslint/template-parser": "17.3.0",
    "@angular/cli": "17.3.1",
    "@angular/compiler-cli": "17.3.1",
    "@angular/language-service": "17.3.1",
    "@angular/localize": "^17.3.1",
    "@types/hammerjs": "2.0.45",
    "@types/jest": "29.5.12",
    "@types/mousetrap": "1.6.15",
    "@types/node": "20.11.30",
    "@typescript-eslint/eslint-plugin": "7.3.1",
    "@typescript-eslint/parser": "7.3.1",
    "commit-and-tag-version": "12.2.0",
    "conventional-changelog-cli": "4.1.0",
    "eslint": "^8.57.0",
    "eslint-plugin-angular": "4.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsdoc": "48.2.1",
    "eslint-plugin-no-null": "1.0.2",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-rxjs": "5.0.3",
    "eslint-plugin-unicorn": "51.0.1",
    "jest": "29.7.0",
    "jest-preset-angular": "14.0.3",
    "ng-mocks": "14.12.1",
    "postcss": "8.4.38",
    "rimraf": "5.0.5",
    "ts-node": "10.9.2",
    "ts-jest": "29.1.2",
    "typescript": "5.3.3",
    "webpack-bundle-analyzer": "4.10.1"
  }
}
