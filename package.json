{
  "name": "jamberry",
  "version": "0.4.12",
  "author": "ffalt",
  "license": "MIT",
  "description": "a html5 jamserve web player",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:prod": "ng serve --aot --configuration production",
    "build": "ng build",
    "build:AOT": "ng build --aot",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "clean": "rimraf dist",
    "release": "standard-version -a",
    "update:angular": "ng update @angular/cli @angular/core",
    "build:changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 1",
    "build:releaselog": "conventional-changelog -p angular -r 2 -o RELEASELOG.md",
    "build:prebuild": "npm run clean && npm run build:version",
    "build:version": "node ./build-pre.js",
    "bundle-report": "npm run build:stats && webpack-bundle-analyzer --mode static dist/stats.json",
    "build:stats": "ng build --named-chunks --configuration production --stats-json --output-hashing=none",
    "build:prod": "ng build --verbose --aot --configuration production --base-href \"/\"",
    "build:develop": "npm run build:prebuild && ng build --progress --base-href \"/\"",
    "build:deploy": "npm run build:prebuild && npm run build:prod",
    "test:watch": "jest --watch"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "12.2.3",
    "@angular/cdk": "12.2.2",
    "@angular/common": "12.2.3",
    "@angular/compiler": "12.2.3",
    "@angular/core": "12.2.3",
    "@angular/forms": "12.2.3",
    "@angular/platform-browser": "12.2.3",
    "@angular/platform-browser-dynamic": "12.2.3",
    "@angular/platform-server": "12.2.3",
    "@angular/router": "12.2.3",
    "core-js": "3.10.0",
    "hammerjs": "2.0.8",
    "mousetrap": "1.6.5",
    "ngx-image-cropper": "4.0.1",
    "rxjs": "6.6.7",
    "soundmanager2": "2.97.20170602",
    "tslib": "2.2.0",
    "zone.js": "0.11.4"
  },
  "standard-version": {
    "scripts": {
      "postbump": "node ./build-pre.js && git add ./src/environments/version.ts"
    }
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "12.2.2",
    "@angular-eslint/builder": "12.3.1",
    "@angular-eslint/eslint-plugin": "12.3.1",
    "@angular-eslint/eslint-plugin-template": "12.3.1",
    "@angular-eslint/schematics": "12.3.1",
    "@angular-eslint/template-parser": "12.3.1",
    "@angular/cli": "12.2.2",
    "@angular/compiler-cli": "12.2.3",
    "@angular/language-service": "12.2.3",
    "@types/hammerjs": "2.0.40",
    "@types/jest": "26.0.24",
    "@types/mousetrap": "1.6.8",
    "@types/node": "16.7.1",
    "@typescript-eslint/eslint-plugin": "4.29.2",
    "@typescript-eslint/parser": "4.29.2",
    "conventional-changelog-cli": "2.1.1",
    "eslint": "7.32.0",
    "eslint-plugin-angular": "4.0.1",
    "eslint-plugin-import": "2.24.1",
    "eslint-plugin-jsdoc": "36.0.7",
    "eslint-plugin-no-null": "latest",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-rxjs": "latest",
    "eslint-plugin-unicorn": "latest",
    "jest": "27.0.6",
    "jest-preset-angular": "9.0.7",
    "ng-mocks": "12.4.0",
    "postcss": "8.3.6",
    "rimraf": "3.0.2",
    "standard-version": "9.3.1",
    "ts-node": "10.2.1",
    "typescript": "4.3.5",
    "webpack-bundle-analyzer": "4.4.2"
  }
}
