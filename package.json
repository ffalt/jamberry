{
  "name": "jamberry",
  "version": "0.4.4",
  "author": "ffalt",
  "license": "MIT",
  "description": "a html5 jamserve web player",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:prod": "ng serve --aot --prod",
    "build": "ng build",
    "build:AOT": "ng build --aot",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "eslint": "eslint  ./src --ext .ts",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "clean": "rimraf dist",
    "release": "standard-version -a",
    "update:angular": "ng update @angular/cli @angular/core",
    "build:changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 1",
    "build:releaselog": "conventional-changelog -p angular -r 2 -o RELEASELOG.md",
    "build:prebuild": "npm run clean && npm run build:version",
    "build:version": "node ./build-pre.js",
    "bundle-report": "npm run build:stats && webpack-bundle-analyzer --mode static dist/stats.json",
    "build:stats": "ng build --named-chunks --prod --stats-json --output-hashing=none",
    "build:prod": "ng build --verbose --aot --prod --base-href \"/\"",
    "build:develop": "npm run build:prebuild && ng build --progress --base-href \"/\"",
    "build:deploy": "npm run build:prebuild && npm run build:prod",
    "test:watch": "jest --watch"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "10.1.3",
    "@angular/cdk": "10.2.3",
    "@angular/common": "10.1.3",
    "@angular/compiler": "10.1.3",
    "@angular/core": "10.1.3",
    "@angular/forms": "10.1.3",
    "@angular/platform-browser": "10.1.3",
    "@angular/platform-browser-dynamic": "10.1.3",
    "@angular/platform-server": "10.1.3",
    "@angular/router": "10.1.3",
    "core-js": "3.6.5",
    "hammerjs": "2.0.8",
    "mousetrap": "1.6.5",
    "ngx-image-cropper": "3.2.1",
    "rxjs": "6.6.3",
    "soundmanager2": "2.97.20170602",
    "tslib": "2.0.1",
    "zone.js": "0.11.1"
  },
  "standard-version": {
    "scripts": {
      "postbump": "node ./build-pre.js && git add ./src/environments/version.ts"
    }
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.1001.3",
    "@angular/cli": "10.1.3",
    "@angular/compiler-cli": "10.1.3",
    "@angular/language-service": "10.1.3",
    "@types/hammerjs": "2.0.36",
    "@types/jest": "26.0.14",
    "@types/mousetrap": "1.6.4",
    "@types/node": "14.11.2",
    "@typescript-eslint/eslint-plugin": "4.3.0",
    "@typescript-eslint/parser": "4.3.0",
    "codelyzer": "6.0.0",
    "conventional-changelog-cli": "2.1.0",
    "eslint": "7.10.0",
    "eslint-plugin-angular": "4.0.1",
    "jest": "26.4.2",
    "jest-preset-angular": "8.3.1",
    "ng-mocks": "10.1.3",
    "rifraf": "2.0.3",
    "rimraf": "3.0.2",
    "rxjs-tslint-rules": "4.34.3",
    "standard-version": "9.0.0",
    "ts-node": "9.0.0",
    "tslint": "6.1.3",
    "tslint-etc": "1.13.7",
    "typescript": "4.0.3",
    "webpack-bundle-analyzer": "3.9.0"
  }
}
