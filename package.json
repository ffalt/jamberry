{
  "name": "jamberry",
  "version": "0.6.3",
  "author": "ffalt",
  "license": "MIT",
  "description": "a html5 jamserve web player",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:prod": "ng serve --aot --configuration production",
    "build": "ng build",
    "build:AOT": "ng build --aot",
    "check": "qlty check --all",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "ng lint && eslint .",
    "lint:fix": "ng lint --fix && eslint . --fix",
    "clean": "rimraf dist",
    "i18n:export": "ng extract-i18n --output-path src/locale",
    "release": "npx commit-and-tag-version -a",
    "update:angular": "ng update @angular/cli @angular/core",
    "build:changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 1",
    "build:releaselog": "conventional-changelog -p angular -r 2 -o RELEASELOG.md",
    "build:prebuild": "npm run clean && npm run build:version",
    "build:version": "node ./build-pre.mjs",
    "build:stats": "ng build --named-chunks --configuration production --stats-json --output-hashing=none",
    "build:prod": "ng build --verbose --aot --configuration production --base-href \"/\"",
    "build:develop": "npm run build:prebuild && ng build --progress --base-href \"/\"",
    "build:deploy": "npm run build:prebuild && npm run build:prod",
    "test:watch": "jest --watch",
    "analyze": "npm run build:stats && npx -y @angular-experts/hawkeye dist/stats.json"
  },
  "engines": {
    "node": ">=22"
  },
  "private": true,
  "commit-and-tag-version": {
    "scripts": {
      "postbump": "node ./build-pre.mjs && git add ./src/environments/version.ts"
    }
  },
  "overrides": {
    "@conventional-changelog/git-client": "2.5.1",
    "minimatch": "10.2.2",
    "tar": "7.5.9",
    "glob": "13.0.0"
  },
  "dependencies": {
    "@angular/animations": "21.2.0",
    "@angular/cdk": "21.2.0",
    "@angular/common": "21.2.0",
    "@angular/compiler": "21.2.0",
    "@angular/core": "21.2.0",
    "@angular/forms": "21.2.0",
    "@angular/platform-browser": "21.2.0",
    "@angular/platform-browser-dynamic": "21.2.0",
    "@angular/router": "21.2.0",
    "core-js": "3.48.0",
    "mousetrap": "1.6.5",
    "ngx-image-cropper": "9.1.6",
    "rxjs": "7.8.2",
    "soundmanager2": "2.97.20170602",
    "tslib": "2.8.1",
    "zone.js": "0.16.1"
  },
  "devDependencies": {
    "@angular/build": "21.2.0",
    "@angular/cli": "21.2.0",
    "@angular/compiler-cli": "21.2.0",
    "@angular/language-service": "21.2.0",
    "@angular/localize": "21.2.0",
    "@eslint/js": "9.39.2",
    "@stylistic/eslint-plugin": "5.9.0",
    "@types/jest": "30.0.0",
    "@types/mousetrap": "1.6.15",
    "@types/node": "25.3.3",
    "angular-eslint": "21.2.0",
    "baseline-browser-mapping": "2.10.0",
    "conventional-changelog-cli": "5.0.0",
    "eslint": "9.39.2",
    "eslint-plugin-jest": "29.15.0",
    "eslint-plugin-rxjs-x": "1.0.0",
    "eslint-plugin-unicorn": "63.0.0",
    "globals": "17.4.0",
    "jest": "30.2.0",
    "jest-environment-jsdom": "30.2.0",
    "jest-preset-angular": "16.1.1",
    "postcss": "8.5.6",
    "rimraf": "6.1.3",
    "ts-jest": "29.4.6",
    "ts-node": "10.9.2",
    "typescript": "5.9.3",
    "typescript-eslint": "8.56.0"
  }
}
