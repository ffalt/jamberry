{
  "name": "jamberry",
  "version": "0.4.27",
  "author": "ffalt",
  "license": "MIT",
  "description": "a html5 jamserve web player",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:prod": "ng serve --aot --configuration production",
    "build": "ng build",
    "build:AOT": "ng build --aot",
    "check": "qlty check --all",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "ng lint && eslint .",
    "lint:fix": "ng lint --fix",
    "clean": "rimraf dist",
    "i18n:export": "ng extract-i18n --output-path src/locale",
    "release": "commit-and-tag-version -a",
    "update:angular": "ng update @angular/cli @angular/core",
    "build:changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 1",
    "build:releaselog": "conventional-changelog -p angular -r 2 -o RELEASELOG.md",
    "build:prebuild": "npm run clean && npm run build:version",
    "build:version": "node ./build-pre.mjs",
    "build:stats": "ng build --named-chunks --configuration production --stats-json --output-hashing=none",
    "build:prod": "ng build --verbose --aot --configuration production --base-href \"/\"",
    "build:develop": "npm run build:prebuild && ng build --progress --base-href \"/\"",
    "build:deploy": "npm run build:prebuild && npm run build:prod",
    "test:watch": "jest --watch",
    "analyze": "npm run build:stats && npx -y @angular-experts/hawkeye dist/stats.json"
  },
  "engines": {
    "node": ">=20"
  },
  "private": true,
  "standard-version": {
    "scripts": {
      "postbump": "node ./build-pre.mjs && git add ./src/environments/version.ts"
    }
  },
  "dependencies": {
    "@angular/animations": "20.2.1",
    "@angular/cdk": "20.2.0",
    "@angular/common": "20.2.1",
    "@angular/compiler": "20.2.1",
    "@angular/core": "20.2.1",
    "@angular/forms": "20.2.1",
    "@angular/platform-browser": "20.2.1",
    "@angular/platform-browser-dynamic": "20.2.1",
    "@angular/router": "20.2.1",
    "core-js": "3.45.1",
    "mousetrap": "1.6.5",
    "ngx-image-cropper": "9.1.5",
    "rxjs": "7.8.2",
    "soundmanager2": "2.97.20170602",
    "tslib": "2.8.1",
    "zone.js": "0.15.1"
  },
  "devDependencies": {
    "@angular/build": "20.2.0",
    "@angular/cli": "20.2.2",
    "@angular/compiler-cli": "20.2.1",
    "@angular/language-service": "20.2.1",
    "@angular/localize": "20.2.1",
    "@eslint/js": "9.34.0",
    "@stylistic/eslint-plugin": "5.2.3",
    "@types/jest": "30.0.0",
    "@types/mousetrap": "1.6.15",
    "@types/node": "24.3.0",
    "angular-eslint": "20.2.0",
    "commit-and-tag-version": "12.5.2",
    "conventional-changelog-cli": "5.0.0",
    "eslint": "9.34.0",
    "eslint-plugin-jest": "29.0.1",
    "eslint-plugin-rxjs-x": "0.7.7",
    "eslint-plugin-unicorn": "60.0.0",
    "globals": "16.3.0",
    "jest": "30.0.5",
    "jest-preset-angular": "15.0.0",
    "postcss": "8.5.6",
    "rimraf": "6.0.1",
    "ts-jest": "29.4.1",
    "ts-node": "10.9.2",
    "typescript": "5.9.2",
    "typescript-eslint": "8.40.0"
  }
}
